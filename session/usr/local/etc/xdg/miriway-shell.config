# X11 support
enable-x11=1

# Display timeout
idle-timeout=600

# Keyboard shortcuts
meta=Left:@dock-left
meta=Right:@dock-right
meta=Up:@toggle-maximized
meta=Home:@workspace-begin
meta=End:@workspace-end
meta=Page_Up:@workspace-up
meta=Page_Down:@workspace-down
ctrl-alt=BackSpace:@exit

# App launch environment
app-env-amend=XDG_SESSION_TYPE=wayland:GTK_USE_PORTAL=0:XDG_CURRENT_DESKTOP=Mir:GTK_A11Y=none

# App shortcuts
ctrl-alt=t:/snap/cosmir/current/usr/local/bin/cosmir-unsnap /snap/cosmir/current/usr/local/bin/miriway-terminal
